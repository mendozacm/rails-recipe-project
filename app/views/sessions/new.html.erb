  
<%= form_for @user, url: login_path, method: :post do |f| %>
    <%= f.label :username %>
    <%= f.text_field :username %><br>
  
    <%= f.label :password %>
    <%= f.password_field :password %><br>

    <%= link_to('Log in with Facebook!', '/auth/facebook') %><br>
  
    <%= f.submit "log in" %>
    Or <%= link_to(controller: 'users', action: 'new') { 'sign up' } %>
  <% end %>