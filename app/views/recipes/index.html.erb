
<p>
<% @recipes.each do |recipe|%><br><li>
   Name: <%= recipe.name %><br>
   Username: <%= recipe.username %><br>
   Description: <%= recipe.description %><br>
   Instructions: <%= recipe.instructions %><br>
   <% recipe.ingredients.each do |i| %>
      Ingredient name: <%= i.ingredient_name %><br>
 
       <% end %>
       <br> Comments:
  <% recipe.comments.each do |comment| %>
    <%= link_to comment.user.username, user_path(comment.user) %> said
    <%= comment.body %>
  <% end %>
   

   <br><%= link_to "create comment", controller: "comments", action: "new", id: recipe.id%><br>
   


    
    <% end %>
    </li></p><br>
    <%= render 'links' %>