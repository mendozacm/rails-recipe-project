<h3> Create a Recipe </h3>

<%= form_for :recipe, as: :post, url: recipes_path do |f| %>

    <label> Name:</label><br>
    <%= f.text_field :name %><br>

    <label>Recipe Description:</label><br>
    <%= f.text_area :description %><br>

    <label>Recipe instructions:</label><br>
    <%= f.text_area :instructions %><br>

   

    <%= hidden_field_tag :"recipe[username]", @user.username %>

  <h3>Ingredients</h3>
    <%= f.fields_for :"recipe[ingredient]" do |ri| %>
        <%= ri.label :quantity %>
        <%= ri.text_field :quantity %>

        
            <%= ri.label :name %>
            <%= ri.text_field :ingredient_name %>
            <% end %>
           


    <%= f.submit  %>
<% end %>